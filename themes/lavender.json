{
  "name": "薰衣草主题",
  "description": "梦幻薰衣草主题，二次元梦幻风格",

  "decorations": {
    "h2Prefix": "☆ ",
    "h2Suffix": " ☆",
    "h3Prefix": "♪ ",
    "h3Suffix": " ♪",
    "listSymbol": "★",
    "hrSymbol": "☆ · ★ · ☆"
  },

  "base": {
    "fontFamily": "-apple-system, BlinkMacSystemFont, 'PingFang SC', sans-serif",
    "sizes": {
      "content": "15px",
      "code": "13px"
    },
    "spacing": {
      "h2Bottom": "16px",
      "h3Bottom": "14px",
      "contentBottom": "0px"
    },
    "defaultTextColor": "#4A4458"
  },

  "colors": {
    "primary": "#A78BFA",
    "secondary": "#A78BFA",
    "accent": "#8B5CF6",
    "text": "#4A4458",
    "markBg": "#F3E8FF",
    "markText": "#7C3AED",
    "codeBg": "#F5F0FF",
    "codeText": "#6D28D9",
    "quoteBg": "#FAF8FF",
    "quoteText": "#5B5270",
    "listColor": "#A78BFA"
  },

  "codeBlock": {
    "outerBg": "#FAF8FF",
    "border": "#DDD6FE",
    "headerBg": "#A78BFA",
    "headerText": "#FFFFFF",
    "contentBg": "#1E1B2E",
    "contentText": "#DDD6FE",
    "dots": {
      "red": "#FF5F56",
      "yellow": "#FFBD2E",
      "green": "#27C93F"
    }
  },

  "blockquoteAlert": {
    "note": {
      "barColor": "#A78BFA",
      "bgColor": "#F3E8FF"
    },
    "tip": {
      "barColor": "#7DD3A8",
      "bgColor": "#ECFDF5"
    },
    "important": {
      "barColor": "#F9A8D4",
      "bgColor": "#FDF2F8"
    },
    "warning": {
      "barColor": "#FCD34D",
      "bgColor": "#FEFCE8"
    },
    "caution": {
      "barColor": "#FDA4AF",
      "bgColor": "#FFF1F2"
    }
  },

  "blockquoteNormal": {
    "barColor": "#A78BFA",
    "bgColor": "#FAF8FF"
  },

  "hr": {
    "borderColor": "#DDD6FE"
  },

  "headingSpan": {
    "backgroundColor": "#F3E8FF",
    "color": "#8B5CF6"
  },

  "settings": {
    "h2": { "size": "18px" },
    "h3": { "size": "17px" },
    "lineHeight": "1.75",
    "borderWidth": "3px",
    "borderPadding": "8px",
    "codePadding": "2px 6px",
    "codeRadius": "4px",
    "quotePadding": "12px 16px",
    "listPadding": "20px",
    "codeBlockRadius": "8px",
    "codeBlockHeaderPadding": "8px 12px",
    "codeBlockLineHeight": "1.6"
  }
}
