{
  "name": "琥珀主题",
  "description": "温暖琥珀主题，金色阳光风格",

  "decorations": {
    "h2Prefix": "◈ ",
    "h2Suffix": " ◈",
    "h3Prefix": "· ",
    "h3Suffix": " ·",
    "listSymbol": "◆",
    "hrSymbol": "◈ · ◈"
  },

  "base": {
    "fontFamily": "-apple-system, BlinkMacSystemFont, 'PingFang SC', sans-serif",
    "sizes": {
      "content": "15px",
      "code": "13px"
    },
    "spacing": {
      "h2Bottom": "16px",
      "h3Bottom": "14px",
      "contentBottom": "0px"
    },
    "defaultTextColor": "#44403C"
  },

  "colors": {
    "primary": "#F59E0B",
    "secondary": "#F59E0B",
    "accent": "#D97706",
    "text": "#44403C",
    "markBg": "#FFFBEB",
    "markText": "#B45309",
    "codeBg": "#FFFBEB",
    "codeText": "#92400E",
    "quoteBg": "#FAFAF9",
    "quoteText": "#57534E",
    "listColor": "#F59E0B"
  },

  "codeBlock": {
    "outerBg": "#FFFBEB",
    "border": "#FDE68A",
    "headerBg": "#F59E0B",
    "headerText": "#FFFFFF",
    "contentBg": "#1F2937",
    "contentText": "#E5E7EB",
    "dots": {
      "red": "#FF5F56",
      "yellow": "#FFBD2E",
      "green": "#27C93F"
    }
  },

  "blockquoteAlert": {
    "note": {
      "barColor": "#F59E0B",
      "bgColor": "#FFFBEB"
    },
    "tip": {
      "barColor": "#10B981",
      "bgColor": "#ECFDF5"
    },
    "important": {
      "barColor": "#8B5CF6",
      "bgColor": "#F5F3FF"
    },
    "warning": {
      "barColor": "#EF4444",
      "bgColor": "#FEF2F2"
    },
    "caution": {
      "barColor": "#EF4444",
      "bgColor": "#FEF2F2"
    }
  },

  "blockquoteNormal": {
    "barColor": "#F59E0B",
    "bgColor": "#FAFAF9"
  },

  "hr": {
    "borderColor": "#FDE68A"
  },

  "headingSpan": {
    "backgroundColor": "#FFFBEB",
    "color": "#D97706"
  },

  "settings": {
    "h2": { "size": "18px" },
    "h3": { "size": "17px" },
    "lineHeight": "1.75",
    "borderWidth": "3px",
    "borderPadding": "8px",
    "codePadding": "2px 6px",
    "codeRadius": "4px",
    "quotePadding": "12px 16px",
    "listPadding": "20px",
    "codeBlockRadius": "8px",
    "codeBlockHeaderPadding": "8px 12px",
    "codeBlockLineHeight": "1.6"
  }
}
